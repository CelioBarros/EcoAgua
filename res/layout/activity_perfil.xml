<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/subBackground"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/foto_predio"
            android:layout_width="122dp"
            android:layout_height="134dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/foto" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.39"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_sair"
                android:layout_width="54dp"
                android:layout_height="38dp"
                android:layout_gravity="right"
                android:background="@drawable/botao"
                android:text="@string/s_perfil_predio_sair"
                android:width="5px"
                android:color="#000000" />

            <TextView
                android:id="@+id/tv_perfil_predio_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="40dp"
                android:layout_weight="0"
                android:text="UserNamegrande"
                android:textSize="18sp" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.30" >
            </ListView>

            <Button
                android:id="@+id/btn_cadastrar_morador_perfil"
                android:layout_width="128dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:background="@drawable/botao"
                android:text="@string/s_perfil_predio_cadastrar" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
